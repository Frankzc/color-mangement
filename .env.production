// ===== .env.production =====
# 应用信息
VITE_APP_TITLE=时装设计师颜色管理系统
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=专业的时装设计颜色管理工具

# API配置
VITE_API_BASE_URL=https://yourdomain.com/api
VITE_API_TIMEOUT=10000

# 存储配置
VITE_STORAGE_PREFIX=fashion_color_app_
VITE_STORAGE_VERSION=1.0

# 上传配置
VITE_MAX_UPLOAD_SIZE=10485760
VITE_SUPPORTED_FORMATS=image/jpeg,image/png,image/webp

# 功能开关
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true

# 生产配置
VITE_ENABLE_DEV_TOOLS=false

# 颜色数据配置
VITE_COLORS_DATA_URL=/colors.json
VITE_DEFAULT_PAGE_SIZE=24
VITE_MAX_SEARCH_RESULTS=1000

# UI配置
VITE_DEFAULT_THEME=light
VITE_ANIMATION_DURATION=300
VITE_TOAST_DURATION=3000

# 性能配置
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHE=true